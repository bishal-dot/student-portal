@{
}
@model StudentPortal.Models.Entities.Student
<h1>Delete Student</h1>
@if (Model is null)
{
    <p>No student was found with this Id </p>
}
else
{
    <h4>Are you sure you want to delete this student</h4>

    <div class="mb-3">
        <strong>Name:</strong> @Model.Name <br />
        <strong>Email:</strong> @Model.Email <br />
        <strong>Phone:</strong> @Model.Phone
    </div>

    <form method="post">
        <input type="hidden" asp-for="Id" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="List" class="btn btn-secondary ms-2">Cancel</a>
    </form>
}