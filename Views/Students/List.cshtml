@{
}

@model List<StudentPortal.Models.Entities.Student>

<h1>Students List</h1>

<div style="display: none;">
    @Html.AntiForgeryToken()
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Actions</th>
        </tr>
    <tbody>
        @foreach (var student in Model)
        {
            <tr id="row-@student.Id">
                <td>@student.Id</td>
                <td>@student.Name</td>
                <td>@student.Email</td>
                <td>@student.Phone</td>
                <td>
                    <a class="btn btn-primary" asp-controller="Students" asp-action="Edit" asp-route-id="@student.Id">Edit</a>
                    <button type="button" class="btn btn-danger ms-2 delete-btn" data-id="@student.Id">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@* Jquery CDN *@
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script type="text/javascript">
    $(document).on('click', '.delete-btn', function(){
            if(!confirm('Do you want to delete this student?')){
                return;
            }

            var studentId = $(this).data('id');
            var row = $('#row' + studentId);

            $.ajax({
                url:'/Students/Delete/' + studentId,
                type: 'POST',
                data: {
                    id: studentId,
                    __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                },
                success: function(response){
                    if(response.success){
                        alert("Student deleted successfully");
                        row.remove();
                        location.reload();
                    }
                    else{
                        alert("Error deleting student: " + response.message);
                    }
                },
                error: function(){
                    alert("An error occurred while processing your request.");  
                }
            });
    });
</script>
