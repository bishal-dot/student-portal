@model StudentPortal.Models.AddStudentViewModel

<h1>Add New Student</h1>
<form method="post">
        
    <div class="mt-3">
        <label>Name</label>
        <input type="text" class="form-control" placeholder="Enter student name" asp-for="Name" />
    </div>
    <div class="mt-3">
        <label>Email</label>
        <input type="email" class="form-control" placeholder="Enter student email" asp-for="Email" />
    </div>
    <div class="mt-3">
        <label class="mt-2">Phone</label>
        <input type="text" class="form-control" placeholder="Enter student phone" asp-for="Phone"/>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Add Student</button>
    <button class="btn btn-secondary mt-3 ms-2">Cancel</button>
</form>
